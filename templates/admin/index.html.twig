{% extends 'base.html.twig' %}

{% block title %} Administration du blog {% endblock %}

{% block body %}
    <h3 class="h3 mt-3 text-left">Administration du blog</h3>

    <section class="text-left">
        <h4 class="text-left h4 mt-3">Droits des utilisateurs</h4>

        <small class="small font-italic">Il y a {{ users | length }} utilisateurs enregistrÃ©s.</small>

        <div class="row">

            <table class="col-12 table table-hover mt-3">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Admin</th>
                    <th scope="col">User</th>
                    <th scope="col">Valider</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="table-primary">
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <form>
                            <td>
                                <input type="checkbox"
                                       value="1"
                                        {% if user.role('ROLE_ADMIN') %}
                                            checked
                                        {% endif %}
                                >
                            </td>
                            <td>
                                <input type="checkbox"

                                       value="1"
                                        {% if user.role('ROLE_USER') %}
                                            checked
                                        {% endif %}
                                >
                            </td>
                            <td>
                                <button type="submit" class="btn btn-danger">Valider</button>
                            </td>
                        </form>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>



{% endblock %}
